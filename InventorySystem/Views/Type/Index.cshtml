
@{
    ViewBag.Title = "Product Type";
}

<style>
    .modal-content {
        position: relative;
        display: flex;
        flex-direction: column;
        width: 50%;
        pointer-events: auto;
        background-color: white;
        background-clip: padding-box;
        border: 1px solid white;
        border-radius: 0.3rem;
        outline: 0;
        left: 30%;
    }
</style>
<div id="AddType" class="pt-5 px-4" style="display:none">
    <h4 class="form-header" id="hiddenform">
        Add New Product Type
    </h4>



    @using (Html.BeginForm("AddEditSpec", "Specs", null, FormMethod.Post, new { @id = "myForm", @class = "forms-sample", enctype = "multipart/form-data", role = "form", onsubmit = "return validateForm(this)" }))
    {
        <div class="row">

            <input type="hidden" id="TypeId" />
            <div class="col-md-6">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Type*</label>
                        <input type="text" class="form-control" placeholder="Product Type" required="required" id="Type" />
                        <span class="text-danger" id="Val_Name"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <button type="button" class="btn btn-success" id="btnSubmit">
                        <span>Save</span>
                    </button>
                    <button type="button" class="btn btn-danger" id="closeButton"><i class="fa fa-close"></i>Close</button>

                </div>
            </div>
            
        </div>
    }
</div>

<div id="ProductTypeLists" class="py-7">
    <h4 class="text-left" style="margin-left: 20px;">Product Type</h4>
    <div class="px-4 px-md-6">
        <div class="row">
            <div class="col-6">

            </div>
            <div class="col-6 text-right">
                <button type="button" class="mb-3 mx-1 btn btn-md btn-theme" data-toggle="modal" data-target=""id="addType" data-backdrop="static" data-keyboard="false"><i class="fa fa-plus"></i> Add New</button>
            </div>
        </div>
    </div>

    <div class="px-4 px-md-6">
        <div class="table-responsive">
            <div id="ProductTypeList"></div>
        </div>
    </div>
</div>
<div class="modal fade" id="ModelSubscription" tabindex="-1" role="dialog" aria-labelledby="labelSubscription" aria-hidden="true">
    <div class="modal-dialog" role="document" style="max-width:1400px;top:4%;">
        <div class="modal-content">
            <div class="modal-body" id="SubscriptionModelBody">
            </div>
        </div>
    </div>
</div>

<div aria-hidden="true" aria-labelledby="myLargeModalLabel" id="ModelTask1" class="modal fade bd-example-modal-lg" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-lg" style="top:15%;max-width:1400px">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"></h5>
                <button aria-label="Close" class="close" data-dismiss="modal" type="button"><span aria-hidden="true"> &times;</span></button>
            </div>
            <div class="modal-body" id="pDetails">
            </div>
        </div>
    </div>
</div>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/scripts/app/ProductType.js"></script>
